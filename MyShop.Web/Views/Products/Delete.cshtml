@using MyShop.Core.DTOs
@model ProductDto

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Product</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <strong>Are you sure?</strong> This action cannot be undone.
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <input type="text" class="form-control" value="@Model.Name" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" rows="3" disabled>@Model.Description</textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Price</label>
                        <input type="text" class="form-control" value="@Model.Price.ToString("C")" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Stock</label>
                        <input type="text" class="form-control" value="@Model.Stock" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Group ID</label>
                        <input type="text" class="form-control" value="@Model.GroupId" disabled />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Status</label>
                        <input type="text" class="form-control" value="@(Model.IsActive ? "Active" : "Inactive")" disabled />
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <form asp-action="DeleteConfirmed" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                        <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
